# /etc/systemd/system/steam-gadget.service
[Unit]
Description=Steam Deck Gadget

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/deck/SteamDeckGadget
ExecStart=/home/deck/SteamDeckGadget/steam-gadget.py setup
ExecStop=/home/deck/SteamDeckGadget/steam-gadget.py destroy steam_deck_gadget

[Install]
WantedBy=multi-user.target
